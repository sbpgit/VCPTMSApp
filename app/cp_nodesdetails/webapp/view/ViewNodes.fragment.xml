<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified">
	<Dialog  title="ViewNodes" contentWidth="450px" titleAlignment="Center" >
		<Table id="ViewList" items="{path: '/ViewNodesresults'}" rememberSelections="false" 
             mode="SingleSelectMaster">
                <columns>
                    <Column hAlign="Center">
                        <Text text="{i18n>viewNode}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{CHILD_NODE}" text="{NODE_DESC}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
		<buttons>
			<Button id="saveButton" type='Ghost' text="{i18n>save}" press="onAssignViewNode"></Button>
			<Button type='Reject' text="{i18n>close}" press="onViewNodeClose"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>