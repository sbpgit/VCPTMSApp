                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <Text text="{LOCATION_ID}"/>
                        <Text text="{PRODUCT_ID}"/>
                        <Text text="{ITEM_NUM}"/>
                        <Text text="{COMPONENT}"/>
                        <Text text="{OBJ_DEP}"/>
                        <Text text="{OBJDEP_DESC}"/>
                        <Text text="{STRUC_NODE}"/>
                        <Text text="{PROFILE}"/>
