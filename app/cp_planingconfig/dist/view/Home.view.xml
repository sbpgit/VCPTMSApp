<mvc:View controllerName="cpapp.cpplaningconfig.controller.Home" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:ux="sap.uxap">
    <ux:ObjectPageLayout id="ObjectPageLayout" showHeaderContent="false">
        <ux:headerTitle>
            <ux:ObjectPageDynamicHeaderTitle class="titleAlign">
                <ux:expandedHeading>
                    <Title text="{i18n>appTitle}" />
                </ux:expandedHeading>
            </ux:ObjectPageDynamicHeaderTitle>
        </ux:headerTitle>

        <ux:sections>
            <ux:ObjectPageSection class="sapUiNoMarginTop">
                <ux:subSections>
                    <ux:ObjectPageSubSection>
                        <ux:blocks>
                            <Table
                                id="idParameterTable"
                                backgroundDesign="Solid"
                                showSeparators="None"
                                alternateRowColors="false"
                                width="auto"
                                items="{
			                path: '/parameters',
                            sorter: 
                                { path: 'GROUP_DESCRIPTION',
                                descending: false,
                                group: true },                              
                            groupHeaderFactory: '.getGroupHeader'
                            }"
                            >
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Label text="Parameters" LabelDesign="Bold" class="headerFont" />
                                            <ToolbarSpacer />
                                            <Button icon="sap-icon://save" text="Save" class="btnSize" press="onPressSave" />
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>

                                <columns>
                                    <Column visible="false">
                                        <!-- <Text text="GROUP_ID" /> -->
                                    </Column>
                                    <Column minScreenWidth="Desktop" demandPopin="true" width="30em" hAlign="End">
                                        <!-- <Text text="Description" /> -->
                                    </Column>
                                    <Column minScreenWidth="Desktop" demandPopin="true" width="30em" hAlign="End">
                                        <!-- <Text text="Value" /> -->
                                    </Column>
                                    <Column minScreenWidth="Desktop" demandPopin="true" width="10em" hAlign="Begin">
                                        <!-- <Text text="Value" /> -->
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <Text text="{PARAMETER_ID}" />
                                            <Label text="{DESCRIPTION}" required="true" />
                                            <Input value="{VALUE}" showValueHelp="{VALUE_HELP}" valueHelpOnly="true" type="{= ${UNIT} === 'Days' ? 'Number' : 'Text'}" liveChange="onParamValueChange" valueHelpRequest="handleValueHelpRequest" />
                                            <Text text="{UNIT}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ux:blocks>
                    </ux:ObjectPageSubSection>
                </ux:subSections>
            </ux:ObjectPageSection>
        </ux:sections>
    </ux:ObjectPageLayout>
</mvc:View>
