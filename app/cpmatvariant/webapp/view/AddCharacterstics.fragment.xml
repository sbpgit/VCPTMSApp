<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified">
    <Dialog id="idRestItem2" title="Create Characteristic Description" contentWidth="850px" titleAlignment="Center">
           
                
        <VBox class="sapUiSmallMargin">
            <f:SimpleForm id="SimpleFormToolbaritem2" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="4" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label text="Unique Id"/>
                    <Input id="iduinq2" value="" editable="false"/>

                    <Label text="Class Name"/>
                    <Input id="idClassname2" value=""  placeholder="Class Name" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelp"/>
                    <Label text="Characteristic Name"/>
                    <Input id="idCharname2" value=""  placeholder="Characteristic Name" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelp"/>
                    <!-- <Label text="{i18n>odcond}"/>
                    <Select id="idODcond2"  selectedKey="EQ" class="buttonDesktop">
							<core:ListItem key="EQ" text="EQ"/>
							<core:ListItem key="NE" text="NE"/>
						</Select> -->
                    
                    <Label text="Characteristic Value"/>
                    <Input id="idCharval2" value=""  placeholder="Characteristic Value" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelp"/>
                    
                                  
                    

                </f:content>
            </f:SimpleForm>

        </VBox>
     
        <buttons>
            
            <Button id="idAdd" text="Add" press="onAdd" type="Emphasized"/>
            <Button type='Reject' text="{i18n>close}" press="onCloseRestItem"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>