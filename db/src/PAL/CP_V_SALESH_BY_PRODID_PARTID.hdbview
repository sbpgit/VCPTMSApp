VIEW CP_V_SALESH_BY_PRODID_PARTID AS
SELECT SALES_DOC, CP_V_SALESH_CHARVALS.LOCATION_ID, CP_V_SALESH_CHARVALS.PRODUCT_ID, CP_V_PARTIAL_CHARVALS.PRODUCT_ID AS PARTIAL_ID, 
SALES_CHARS, SALES_CHARVALS,
PRTL_CHARS, PRTL_CHARVALS FROM CP_V_SALESH_CHARVALS
INNER JOIN CP_V_PARTIAL_CHARVALS ON
CP_V_SALESH_CHARVALS.LOCATION_ID = CP_V_PARTIAL_CHARVALS.LOCATION_ID
AND CP_V_SALESH_CHARVALS.PRODUCT_ID = CP_V_PARTIAL_CHARVALS.REF_PRODID
WHERE SALES_CHARVALS  LIKE_REGEXPR PRTL_CHARVALS
ORDER BY SALES_DOC;