VIEW CP_V_SALESH_CHARVALS AS 
SELECT SALES_DOC, LOCATION_ID, PRODUCT_ID, 
STRING_AGG(PTS."CHAR_NUM",','ORDER BY PTS."CHAR_NUM") AS SALES_CHARS,
STRING_AGG(PTS."CHARVAL_NUM",','ORDER BY PTS."CHARVAL_NUM") AS SALES_CHARVALS  FROM 
CP_V_SALESH_BY_CHAR_CHARVALS AS PTS
-- WHERE PRODUCT_ID = '534EDPI'
GROUP BY SALES_DOC, LOCATION_ID, PRODUCT_ID
ORDER BY SALES_DOC, LOCATION_ID, PRODUCT_ID;