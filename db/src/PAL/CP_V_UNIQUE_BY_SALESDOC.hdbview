VIEW CP_V_UNIQUE_BY_SALESDOC AS
SELECT SALES_DOC, ADD_DAYS (TO_DATE ("MAT_AVAILDATE", 'YYYY-MM-DD'), 7-WEEKDAY (TO_DATE ("MAT_AVAILDATE", 'YYYY-MM-DD'))) AS CAL_DATE,
PLAN_LOC AS LOCATION_ID, PRODUCT_ID, UNIQUE_ID, PRIMARY_ID, ORD_QTY FROM V_SALES_H
ORDER BY CAL_DATE, PLAN_LOC, PRODUCT_ID, UNIQUE_ID, PRIMARY_ID; 