VIEW V_PLSTR_SCNDRY_BY_SALESDOC AS
SELECT SALES_DOC, WEEKDATE, PRODUCT_ID, LOCATION_ID, CONFIRMED_QTY As ORDER_QTY, 
STRING_AGG("CHAR_NUM",','ORDER BY CHAR_NUM)  AS "SCNDRY_ID_CHARS",
STRING_AGG("CHARVAL_NUM",','ORDER BY CHARVAL_NUM)  AS "SCNDRY_ID_CHARVALS"
FROM V_PLSTR_TIMESERIES
WHERE (CHAR_GROUP = 'SCNDRY')
-- WHERE (CHAR_GROUP = 'PARTIAL' OR CHAR_GROUP = 'PRIMARY' OR CHAR_GROUP = 'SCNDRY')
--AND PRODUCT_ID = '534EDPI'
GROUP BY SALES_DOC, WEEKDATE, PRODUCT_ID, LOCATION_ID, CONFIRMED_QTY
ORDER BY SALES_DOC, WEEKDATE, PRODUCT_ID, LOCATION_ID ASC;