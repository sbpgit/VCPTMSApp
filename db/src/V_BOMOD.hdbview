VIEW "V_BOMOD"
AS SELECT A.LOCATION_ID,
A.PRODUCT_ID,
A.ITEM_NUM,
A.COMPONENT,
A.COMP_QTY,
B.OBJ_DEP,
B.OBJDEP_DESC,
A.VALID_FROM,
A.VALID_TO
-- C.CHAR_NUM,
-- C.CHARVAL_NUM,
-- C.OD_CONDITION,
-- C.OBJ_COUNTER,
-- C.CHAR_COUNTER,
-- C.ROW_ID
from "CP_BOMHEADER" as A
inner join "CP_BOM_OBJDEPENDENCY" as B
-- inner join "CP_OBJDEP_HEADER" as C
on  A.LOCATION_ID = B.LOCATION_ID AND
	A.PRODUCT_ID  = B.PRODUCT_ID AND
	A.ITEM_NUM    = B.ITEM_NUM AND
	A.COMPONENT   = B.COMPONENT;