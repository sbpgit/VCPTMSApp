VIEW "V_BOMPVS"
AS SELECT A.LOCATION_ID,
A.PRODUCT_ID,
A.ITEM_NUM,
A.COMPONENT,
A.COMP_QTY,
A.VALID_FROM,
A.VALID_TO,
B.STRUC_NODE
-- C.CHAR_NUM,
-- C.CHARVAL_NUM,
-- C.OD_CONDITION,
-- C.OBJ_COUNTER,
-- C.CHAR_COUNTER,
-- C.ROW_ID
from "CP_BOMHEADER" as A
LEFT OUTER JOIN "CP_PVS_BOM" as B
on  A.LOCATION_ID = B.LOCATION_ID AND
	A.PRODUCT_ID  = B.PRODUCT_ID AND
	A.COMPONENT   = B.COMPONENT;