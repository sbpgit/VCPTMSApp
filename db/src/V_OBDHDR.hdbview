VIEW "V_OBDHDR"
AS SELECT B.LOCATION_ID,
        B.PRODUCT_ID,
        A.OBJ_DEP,
        C.CHAR_VALUE,
        A.OD_CONDITION,
        A.OBJ_COUNTER,
        A.CHAR_COUNTER,
        A.ROW_ID
 FROM CP_OBJDEP_HEADER  AS A
 inner JOIN CP_BOM_OBJDEPENDENCY AS B ON ( A.OBJ_DEP = B.OBJ_DEP )
 INNER JOIN CP_CHAR_VALUES AS C ON ( A.CHAR_NUM = C.CHAR_NUM 
                                    AND A.CHARVAL_NUM = C.CHARVAL_NUM );