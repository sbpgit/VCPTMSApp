VIEW "V_ORDCHAR_F"
AS 
SELECT *
FROM 
	V_OBDHDR
	LEFT OUTER JOIN
	CP_IBP_FUTUREDEMAND
	ON CP_IBP_FUTUREDEMAND.LOCATION_ID = V_OBDHDR.LOCATION_ID
		AND CP_IBP_FUTUREDEMAND.PRODUCT_ID = V_OBDHDR.PRODUCT_ID
	LEFT OUTER JOIN
	CP_IBP_FCHARPLAN
	ON CP_IBP_FCHARPLAN.LOCATION_ID = V_OBDHDR.LOCATION_ID
		AND CP_IBP_FCHARPLAN.PRODUCT_ID = V_OBDHDR.PRODUCT_ID
		AND CP_IBP_FCHARPLAN.VERSION = CP_IBP_FUTUREDEMAND.VERSION
		AND CP_IBP_FCHARPLAN.SCENARIO = CP_IBP_FUTUREDEMAND.SCENARIO
		AND CP_IBP_FCHARPLAN.WEEK_DATE = CP_IBP_FUTUREDEMAND.WEEK_DATE
		AND CP_IBP_FCHARPLAN.CHAR_NUM = V_OBDHDR.CHAR_NUM
		AND CP_IBP_FCHARPLAN.CHARVAL_NUM = V_OBDHDR.CHARVAL_NUM;