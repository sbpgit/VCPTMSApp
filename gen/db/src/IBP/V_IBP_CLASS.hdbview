VIEW V_IBP_CLASS AS
SELECT CLASS_NAME AS "Class", CP_CLASS.CLASS_NUM AS "Class ID", CHAR_NAME AS "Characteristic", 
CP_CHARACTERISTICS.CHAR_NUM AS "Characteristic ID", CHARVAL_DESC, CHARVAL_NUM AS "Characteristic Value ID"
FROM CP_CLASS
INNER JOIN CP_CHARACTERISTICS ON
CP_CLASS.CLASS_NUM = CP_CHARACTERISTICS.CLASS_NUM
INNER JOIN CP_CHAR_VALUES ON
CP_CHARACTERISTICS.CHAR_NUM = CP_CHAR_VALUES.CHAR_NUM;