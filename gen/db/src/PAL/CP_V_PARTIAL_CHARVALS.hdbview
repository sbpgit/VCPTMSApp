VIEW CP_V_PARTIAL_CHARVALS AS 
SELECT PRODUCT_ID, LOCATION_ID, REF_PRODID, 
STRING_AGG(PPC."CHAR_NUM",','ORDER BY PPC."CHAR_NUM") AS PRTL_CHARS, 
STRING_AGG(PPC."CHARVAL_NUM",','ORDER BY PPC."CHARVAL_NUM") AS PRTL_CHARVALS  FROM 
V_PARTIALPRODCHAR AS PPC
WHERE PRODUCT_ID != REF_PRODID
GROUP BY  PRODUCT_ID, LOCATION_ID, REF_PRODID
ORDER BY  PRODUCT_ID, LOCATION_ID, REF_PRODID;