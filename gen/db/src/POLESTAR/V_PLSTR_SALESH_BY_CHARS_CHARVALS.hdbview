VIEW PLSTR_SALESH_BY_CHARS_CHAVALS AS
SELECT DISTINCT SALES_DOC, WEEKDATE, PRODUCT_ID, LOCATION_ID, ORDER_QTY, 
-- CONCAT(PARTIAL_ID_CHARS, CONCAT(',', CONCAT (PRIMARY_ID_CHARS, CONCAT(',', SCNDRY_ID_CHARS)))) AS CHARS,
CONCAT(PARTIAL_ID_CHARS, CONCAT(',', PRIMARY_ID_CHARS)) AS CHARS,
CONCAT(PARTIAL_ID_CHARVALS, CONCAT(',', PRIMARY_ID_CHARVALS)) AS CHARVALS
-- CONCAT(PARTIAL_ID_CHARVALS, CONCAT(',', CONCAT (PRIMARY_ID_CHARVALS, CONCAT(',', SCNDRY_ID_CHARVALS)))) AS CHARVALS
FROM V_PLSTR_ALL_IDS_BY_SALESDOC
ORDER BY WEEKDATE, PRODUCT_ID, LOCATION_ID ASC;