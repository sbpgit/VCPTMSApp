service SidecarProvisioningService @(requires: ['authenticated-user', 'system-user']) {

    type JSON: {
        jobID: String;
    }

    /**
     * Subscribe tenant
     * @param subscribedTenantId Tenant to subscribe
     * @param async true to run subscription asynchronously
     * @returns Json with { jobID: "<job id>" } for asynchronous or { } for synchronous call
     */
    action subscribe(subscribedTenantId : UUID, async:Boolean) returns JSON;

    /**
     * Unsubscribe tenant
     * @param subscribedTenantId Tenant to unsubscribe
     * @param async true to run unsubscription asynchronously
     * @returns Json with { jobID: "<job id>" } for asynchronous or { } for synchronous call
     */
    action unsubscribe(subscribedTenantId:UUID, async:Boolean) returns JSON;
}
