{
    "name": "config_products",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5.6.4",
        "@sap/cds-mtx": "^2.5.1",
        "@sap/cds-odata-v2-adapter-proxy": "^1.8.2",
        "@sap/hana-client": "^2.10.15",
        "@sap/hdi-deploy": "^4.2.0",
        "@sap/xssec": "^3.2.11",
        "debug": "^4.3.2",
        "express": "^4",
        "hdb": "^0.18.3",
        "passport": "^0.5.0"
    },
    "engines": {
        "node": "^12 || ^14"
    },
    "scripts": {
        "start": "cds run",
        "watch-cfgprd_pvsroot": "cds watch --open cfgprd_pvsroot/webapp/index.html#fe-lrop-v4",
        "undeploy": "cf undeploy config_products --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "multitenancy": true,
    "uaa": {
        "kind": "xsuaa"
    },
    "sapux": [
        "app/cfgprd_pvsroot"
    ],
    "devDependencies": {
        "@sap/ux-specification": "^1.90.15"
    }
}
