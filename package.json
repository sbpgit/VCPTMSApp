    "cds": {
        "requires": {
            "auth": {
                "kind": "basic-auth",
                "users": {
                    "SBPTECHTEAM": {
                        "password": "Sbpcorp@22"
                    },
                    "*": false
                }
            },
            "db": {
                "kind": "hana",
                "pool": {
                    "acquireTimeoutMillis": 10000,
                    "evictionRunIntervalMillis": 60000,
                    "min": 0,
                    "max": 100,
                    "numTestsPerEvictionRun": 34,
                    "softIdleTimeoutMillis": 30000,
                    "idleTimeoutMillis": 30000,
                    "testOnBorrow": true
